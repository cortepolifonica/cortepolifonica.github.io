---
layout: base.njk
bgColor: white
---

<main class="w-full min-h-screen pl-4 pr-4 mx-auto mb-10 sm:w-10/12 md:w-9/12 lg:w-8/12 xl:w-7/12">
        <h1 class="mb-2 text-4xl text-gray-900">{{ title }}</h1>
        {% if subtitle %}
        <h2 class="mb-4 text-3xl text-gray-600">{{ subtitle }}</h1>
        {% endif %}
        {#<img src="{{ splash }}" alt="" class="object-cover w-full h-20 mt-0 mb-0" />#}
        <img src="{{ splash }}" alt="" class="object-cover w-full mt-0 mb-0" />
        {% if credit %}
        <span class="text-xs text-gray-400"> Immagine: <a href="{{credit}}" class="underline">{{ credit }}</a></span>
        {% endif %}
        <div class="grid grid-cols-1 sm:grid-cols-4 gap-x-5 text-2xl">
                <div class="col-span-2 sm:col-span-3">
                        <div class="mt-8 mb-8 markdown-content">
                                {{ content | safe }}
                        </div>
                        <p class="text-lg text-gray-500">
                                {{ place }}
                        </p>
                        <p class="text-lg text-gray-500">
                                {{ address }}
                        </p>
                        {% if map %}
                        <p class="text-lg text-gray-500 underline">
                                <a href='{{map}}'>Indicazioni stradali</a>
                        </p>
                        {% endif %}
                </div>
                <div class="flex flex-row order-first col-span-1 pl-4 pr-4 mx-auto space-x-4 sm:space-x-0 sm:flex-col sm:order-last">
                        <div class="text-8xl">
                                {{ eventdate.toLocaleDateString("it-IT", {day: 'numeric'}) }}
                        </div>
                        <div class="flex flex-col justify-center">
                            <div class="text-4xl">
                                {{ eventdate.toLocaleDateString("it-IT", {month: 'long'}) }}
                            </div>
                            <div class="bottom-0 text-4xl">
                                {{ eventdate.toLocaleDateString("it-IT", {year: 'numeric'}) }}
                            </div>
                        </div>
                        <div class="text-4xl m-auto sm:m-0">
                            {{ eventdate.toLocaleString("it-IT", {hour: '2-digit', minute: '2-digit'}) }}
                        </div>
                </div>
        </div>
</main>
